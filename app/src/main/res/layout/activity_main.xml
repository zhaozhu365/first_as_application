<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhaozhu.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! 23333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:background="#3fff4081"
        android:orientation="vertical">

        <com.example.zhaozhu.myapplication.MyButton
            android:layout_width="400px"
            android:layout_height="400px"
            android:background="@color/colorPrimary"
            android:text="myButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestView" />

        <com.example.zhaozhu.myapplication.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myTestView" />

        <com.example.zhaozhu.myapplication.MyTextView2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myTestView2" />

    </LinearLayout>


</RelativeLayout>
